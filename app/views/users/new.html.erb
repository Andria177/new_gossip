<main class="container">
  <h1>Inscrivez-vous !</h1>
  <%= form_tag url_for(action: 'create'), method: "post", :class => "form-group" do %>

    <label for="first_name">Pr√©nom :</label>
    <%= text_field_tag 'first_name', @user.first_name, :class => "form-control" %>

    <label for="last_name">Nom :</label>
    <%= text_field_tag 'last_name', @user.last_name, :class => "form-control" %>

    <label for="email">E-mail :</label>
    <%= text_field_tag 'email', @user.email, :class => "form-control" %>

    <label for="password">Mot de passe :</label>
    <%= password_field_tag 'password', @user.password, :class => "form-control" %>

    <label for="password_confirmation">Confirme ton mot de passe :</label>
    <%= password_field_tag 'password_confirmation', @user.password, :class => "form-control" %>

    <label for="city">Ta ville :</label>
    <%= text_field_tag 'city_id', @user.city_id, :class => "form-control" %>

    <label for="age">Ton age :</label>
    <%= text_field_tag 'age', @user.age, :class => "form-control" %>

    <label for="description">Quelques mots pour mieux te connaitre:</label>
    <%= text_field_tag 'description', @user.description, :class => "form-control" %>

    <%= submit_tag "Valider", class: "btn btn-primary" %>
  <% end %>
</main>
